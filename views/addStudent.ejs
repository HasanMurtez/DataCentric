<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Student</title>
</head>
<body>
    <h1>Add Student</h1>
    <a href="/students">Home</a>

    <!-- Display Errors -->
    <% if (errors && errors.length > 0) { %>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/students/add" method="POST">
        <label for="sid">Student ID</label>
        <input type="text" id="sid" name="sid" value="<%= student.sid || '' %>" required><br><br>

        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= student.name || '' %>" required><br><br>

        <label for="age">Age</label>
        <input type="number" id="age" name="age" value="<%= student.age || '' %>" required><br><br>

        <button type="submit">Add</button>
    </form>
</body>
</html>
